<?xml version="1.0" encoding="utf-8"?>
<Window
	x:Class="GrammarExplorer.Window1" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Width="582"
	Height="467"
	Title="Grammar Explorer">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition
				Height="200*" />
			<RowDefinition
				Height="200" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition
				Width="200*"></ColumnDefinition>
			<ColumnDefinition
				Width="200"></ColumnDefinition>
		</Grid.ColumnDefinitions>
		<RichTextBox
			Grid.Column="0"
			Grid.RowSpan="1"
			x:Name="GrammarTextBox"></RichTextBox>
		<TreeView
			Grid.RowSpan="1"
			x:Name="GrammarRulesTreeView"
			Grid.Column="1"></TreeView>
		<ListView
			Grid.Row="1"
			Grid.RowSpan="1"
			x:Name="ParserErrorListView"
			Grid.ColumnSpan="2"></ListView>
	</Grid>
</Window>